<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/primaryBackgroundColor">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chatItemAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:background="@color/primaryTextColor"
        app:shapeAppearanceOverlay="@style/circleImageView"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/chatItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/kleide_trial_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/quadrataryColor" />

        <TextView
            android:id="@+id/chatItemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message goes here"
            android:fontFamily="@font/kleide_trial_regular"
            android:textSize="14sp"
            android:textColor="@color/quadrataryColor"
            android:padding="10sp"
            android:background="@drawable/reel_trackname_bg"
            />

        <TextView
            android:id="@+id/chatItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textColor="@color/quadrataryColor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
